<% if @topics %>
  <% @topics.each do |topic| %>
  <div id="topic_<%= topic.id %>">
    <p><%= link_to topic.title, topic_path(topic) %> <%= topic.user.name %></p>
  </div>
  <% end %>
<% else %>
  </h1>There are currently no topics</h1>
<% end %>

<div id="new_topic">
  <%= form_for Topic.new, url: topics_path do |f| %>
    <h2>Sign In</h2>
    <%= f.label :title, "Title: " %>
    <%= f.text_field :title, id: "topic_title" %>
    <%= f.label :body, "Body: " %>
    <%= f.text_area :body, id: "topic_body" %>
    <ul class="button-group">
      <li>
        <button class="small button" name="commit" type="submit">Create Topic</button>
      </li>
    </ul>
  <% end %>
</div>