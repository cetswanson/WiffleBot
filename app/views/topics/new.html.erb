<div id="topic_create">
  <%= form_for [@subforum, @topic] do |f| %>
    <button class="small button" name="commit" type="submit">Create</button>
    <%= f.label :title, "Title: " %><br>
    <%= f.text_field :title, id: "topic_title_form" %><br>
    <%= f.label :body, "Body: " %><br>
    <%= f.text_area :body, id: "topic_description_form" %>
  <% end %>
</div>
