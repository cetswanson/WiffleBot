<div class="panel panel-info" id="topic_<%= @topic.id %>">
  <div class="panel-title">
    <h3><%= @topic.title %></h3>
    <p><%= @topic.user.name %></p>
    <p><%= @topic.body %></p>
  </div>
</div>

<a class="btn btn-info btn-sm" role="button" href="#">Reply</a>

<% @topic.replies.each do |reply| %>
<div class="panel panel-info" id="post_<%= reply.id %>">
  <div class="panel-heading">
    <%= reply.user.name %>
  </div>
  <div class="panel-title">
    <%= reply.body %>
  </div>
</div>
<% end %>

