<h1>Welcome to WiffleBot</h1>

<div id="signin">
  <%= form_for User.new, url: session_path, html: { class: "form-signin" } do |f| %>
    <h2>Sign In</h2>
    <%= f.label :name, "Username: " %>
    <%= f.text_field :name, id: "signin_name" %>
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password, id: "signin_password" %>
    <ul class="button-group">
      <li>
        <button class="small button" name="commit" type="submit">Sign In</button>
      </li>
    </ul>
  <% end %>
</div>

<div id="signup">
  <%= form_for User.new, url: signup_path, html: { class: "form-signin" } do |f| %>
    <h2>Sign Up</h2>
    <%= f.label :name, "Username: " %>
    <%= f.text_field :name, id: "signup_name" %>
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password, id: "signup_password" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, id: "signup_password_confirmation" %>
    <ul class="button-group">
      <li>
        <button class="small button" name="commit" type="submit">Sign Up</button>
      </li>
    </ul>
  <% end %>
</div>