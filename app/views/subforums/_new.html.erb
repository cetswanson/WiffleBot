<div id="subforum_create">
  <%= form_for Subforum.new do |f| %>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :title, "Title: " %><br>
        <%= f.text_field :title, id: "subforum_title" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :description, "Description: " %>
        <%= f.text_area :description, id: "subforum_description" %>
      </div>
    </div>
    <button type="button small" name="commit" id="subforumSubmit" class="btn btn-info btn-sm" type="submit">Submit</button>
  <% end %>
</div>