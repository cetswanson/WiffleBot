<% if @subforums %>
  <% @subforums.each do |subforum| %>
  <div class="panel panel-info" id="subforum_<%= subforum.id %>">
    <div class="panel-title">
      <%= link_to subforum.title, subforum_topics_path(subforum) %>
    </div>
    <div class="panel-footer">
      <%= subforum.description %>
    </div>
  </div>
  <% end %>
<% else %>
  </h1>There are currently no subforums</h1>
<% end %>

<button id="subforumButton" type="button small" class="btn btn-info btn-sm" data-toggle="modal" data-target="#subforumModal">Add a new Subforum</button>

<div id="subforumModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add a New Subforum</h4>
      </div>
      <div class="modal-body">
        <%= render "subforums/new" %>
      </div>
    </div>
  </div>
</div>