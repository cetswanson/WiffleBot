<div id="signin">
  <%= form_for User.new, url: session_path, html: { class: "form-signin" } do |f| %>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.label :name, "Username: " %>
          <%= f.text_field :name, id: "signin_name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.label :password, "Password: " %>
          <%= f.password_field :password, id: "signin_password" %>
        </div>
      </div>
      <br>
      <button id="signinSubmit" type="button small" class="btn btn-info btn-sm" type="submit">Sign In</button>
  <% end %>
</div>

