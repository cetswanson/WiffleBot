<nav class="navbar navbar-default">
  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-right">
      <% if !current_user %>
      <li>
        <button id="signinButton" type="button small" class="btn btn-info btn-sm" data-toggle="modal" data-target="#signinModal">Sign In</button>
      </li>
      <li>
        <button id="signupButton" type="button small" class="btn btn-info btn-sm" data-toggle="modal" data-target="#signupModal">Sign Up</button>
      </li>
      <% else %>
        <a <a class="btn btn-info btn-sm" role="button" href="<%= subforums_path %>">Home</a>
        <a class="btn btn-info btn-sm" role="button" href="<%= signout_path %>">Sign Out</a>
      <% end %>
    </ul>
  </div>
</nav>

<% if !current_user %>
  <div id="signinModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Sign In</h4>
        </div>
        <div class="modal-body">
          <%= render "sessions/signin" %>
        </div>
      </div>
    </div>
  </div>

  <div id="signupModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Sign In</h4>
        </div>
        <div class="modal-body">
          <%= render "users/signup" %>
        </div>
      </div>
    </div>
  </div>

<% end %>