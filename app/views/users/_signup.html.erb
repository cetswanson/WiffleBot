<div id="signup">
  <%= form_for User.new, html: { class: "form-signin" } do |f| %>
    <div class="modal-body">
      <%= f.label :name, "Username: " %><br>
      <%= f.text_field :name, id: "signup_name" %><br>
      <%= f.label :email, "Email: " %><br>
      <%= f.text_field :email, id: "signup_email" %><br>
      <%= f.label :password, "Password: " %><br>
      <%= f.password_field :password, id: "signup_password" %><br>
      <%= f.label :password_confirmation, "Password Confirmation: " %><br>
      <%= f.password_field :password_confirmation, id: "signup_password_confirmation" %>
    </div>
      <div class="modal-footer">
        <button type="button small" id="signupSubmit" class="btn btn-secondary" type="submit">Sign Up</button>
      </div>
  <% end %>
</div>