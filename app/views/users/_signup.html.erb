<div id="signup">
  <%= form_for User.new, html: { class: "form-signin" } do |f| %>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.label :name, "Username: " %>
          <%= f.text_field :name, id: "signup_name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
         <%= f.label :password, "Password: " %>
         <%= f.password_field :password, id: "signup_password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
         <%= f.label :password_confirmation, "Password Confirmation: " %>
         <%= f.password_field :password_confirmation, id: "signup_password_confirmation" %>
        </div>
      </div>
      <button type="button small" id="signupSubmit" class="btn btn-secondary" type="submit">Sign Up</button>
  <% end %>
</div>